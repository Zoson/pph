<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/orange"
        android:gravity="center_vertical"

        >
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="7dp"
            android:id="@+id/bn_re_s"
            android:background="@drawable/rere"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="领取红包"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="23dp" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/orange2"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/im_gift"
            android:background="@drawable/gift"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <TextView
            android:id="@+id/tv_tag1"
            android:layout_marginLeft="20dp"
            android:textColor="#fff"
            android:layout_toRightOf="@id/im_gift"
            android:text="领取红包金额"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_sum"
            android:textSize="40dp"
            android:layout_marginTop="10dp"
            android:text="30.24"
            android:textColor="#fff"
            android:layout_alignLeft="@id/tv_tag1"
            android:layout_below="@id/tv_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_tag2"
            android:layout_marginLeft="30dp"
            android:textColor="#fff"
            android:layout_toRightOf="@id/tv_tag1"
            android:text="领取红包个数"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_count"
            android:textSize="40dp"
            android:layout_marginTop="10dp"
            android:text="10"
            android:textColor="#fff"
            android:layout_alignLeft="@id/tv_tag2"
            android:layout_below="@id/tv_tag1"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_code"
        android:layout_margin="10dp"
        android:hint="输入您的验证码"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/bt_get"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text=""
        android:padding="14dp"
        android:textColor="#fff"
        android:background="@drawable/bt_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>