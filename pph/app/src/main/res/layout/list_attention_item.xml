<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:descendantFocusability="blocksDescendants"

    >
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="180dp"
        android:paddingBottom="1dp"
        android:background="@drawable/attention_bg">
        <RelativeLayout
            android:id="@+id/rr1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="4dp"
            >
            <ImageView
                android:id="@+id/itemAttentionimage"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/attention_cover"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="6dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="18dp"
                    android:id="@+id/attli"
                    android:orientation="vertical">
                    <TextView

                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/itemAttentionName"
                        android:text="莲花超市(洗护产品)"
                        android:textSize="22dp"
                        android:textColor="@color/material_blue_grey_900"
                        />
                    <TextView
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/itemAttentionText"
                        android:text="广州市番禺区某某路"
                        android:textColor="@color/gray"
                        android:textSize="17dp"
                        />
                </LinearLayout>
                <Button
                    android:id="@+id/itemAttentionbutton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:focusable="false"
                    android:background="@drawable/attention_bn"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp">

                </Button>

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>

