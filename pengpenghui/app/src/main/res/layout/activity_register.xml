<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">


        <ImageView
            android:id="@+id/picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/biaoti"
            android:background="@drawable/bt_radius"
            android:scaleType="centerCrop" />

     </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_person_id"
            android:singleLine="true"
            android:hint="请输入账号（手机）"
            android:padding="10dp"
            android:background="@drawable/et_radius"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            />
       <EditText
           android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_person_name"
            android:singleLine="true"
            android:hint="请输入昵称"

           android:padding="10dp"
            android:background="@drawable/et_radius"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            />
        <EditText
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="12"
            android:id="@+id/et_preson_ps"
            android:singleLine="true"
            android:hint="请输入密码"
            android:padding="10dp"
            android:background="@drawable/et_radius"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            />
         <EditText
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="12"
             android:padding="10dp"
            android:id="@+id/et_preson_rps"
            android:singleLine="true"
            android:hint="再一次输入密码"
            android:background="@drawable/et_radius"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            />

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:padding="7dp"
            android:id="@+id/bt_regi"
            android:background="@drawable/bnse"
            android:layout_gravity="bottom" />
    </LinearLayout>
</LinearLayout>
