<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="16dp"
    android:descendantFocusability="blocksDescendants"
    >

<RelativeLayout
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/youhui_bg"
    android:background="@drawable/youhuibg2">

    <TextView
        android:layout_width="110dp"
        android:layout_height="85dp"
        android:textSize="65dp"
        android:textColor="@color/white"
        android:text="200"
        android:textStyle="bold"
        android:gravity="right"
        android:paddingRight="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:id="@+id/youhui_price" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:textColor="@color/white"
        android:text="优惠券"
        android:layout_marginBottom="3dp"
        android:textStyle="bold"
        android:singleLine="true"
        android:id="@+id/youhui_style"
        android:layout_alignBottom="@+id/youhui_price"
        android:layout_toRightOf="@+id/youhui_price"

         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="小件数典"
        android:textColor="@color/white"
        android:singleLine="true"
        android:id="@+id/youhui_address"
        android:layout_above="@+id/youhui_style"
        android:layout_alignLeft="@+id/youhui_style" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp"
        android:layout_below="@+id/youhui_price"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:singleLine="true"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"

            android:id="@+id/start_data"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:text="---"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:singleLine="true"
            android:textColor="@color/white"
            android:id="@+id/end_data"

            />


    </LinearLayout>
</RelativeLayout>
</LinearLayout>
